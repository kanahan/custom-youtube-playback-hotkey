  {
    "name": "Custom Youtube Playback Hotkey",
    "version": "1.0",
    "description": "Build an custom playback hotkey for Youtube",
    "permissions": [
      "tabs",
      "webNavigation",
      "storage"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "*://www.youtube.com/*"
        ],
        "css": [
          "css/content.css"
        ],
        "js": [
          "js/contentScript.js"
        ],
        "run_at": "document_end"
      }
    ],
    "background": {
      "scripts": [
        "js/background.js"
      ]
    },
    "manifest_version": 2
  }